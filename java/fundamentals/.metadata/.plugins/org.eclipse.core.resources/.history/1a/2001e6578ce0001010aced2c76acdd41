package com.practice;

//import java.math.BigInteger;
import java.math.BigDecimal;
public class Employee {
	
	BigDecimal bs1;
	BigDecimal d;
	BigDecimal m;
	BigDecimal p;
	BigDecimal pf1;
	BigDecimal cg;
	BigDecimal cg1;
	void Salary(){
		Employee E1 = new Employee();
		 E1.bs1 = new BigDecimal("5000");//Basic Monthly Salary
		 E1.d = new BigDecimal("0.08");//Daily Allowance
		 E1.p = new BigDecimal("0.03");
		 E1.cg1 = new BigDecimal("0.07");
		 E1.m = new BigDecimal("30");

		 System.out.println("Basic Salary:" +E1.bs1);
		 System.out.println("DA:" + E1.bs1.multiply(E1.d));
		 System.out.println("PF:" + E1.bs1.multiply(E1.p));
		 System.out.println("CGST:" + E1.bs1.multiply(E1.cg1));
		 System.out.println("SAlARY:" + E1.bs1.add(((E1.bs1.multiply(E1.d)).multiply(E1.m))).subtract(E1.bs1.multiply(E1.p).subtract(E1.bs1.multiply(E1.cg1))));

	}

	public static void main(String[] args) {
		Employee e1 = new Employee();
		e1.Salary();
		
	}

}
